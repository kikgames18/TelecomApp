<Window x:Class="TelecomApp.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Имя" />
            <TextBox x:Name="NameTextBox" />

            <TextBlock Text="Email" Margin="0,10,0,0" />
            <TextBox x:Name="EmailTextBox" />

            <TextBlock Text="Телефон" Margin="0,10,0,0" />
            <TextBox x:Name="PhoneTextBox" />

            <Button Content="Сохранить" Margin="0,20,0,0" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
