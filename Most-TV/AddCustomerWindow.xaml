<Window x:Class="TelecomApp.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить клиента" Height="250" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="ФИО:"/>
        <TextBox x:Name="FullNameTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="EmailTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Телефон:"/>
        <TextBox x:Name="PhoneTextBox" Margin="0,5,0,10"/>

        <Button Content="Сохранить" Click="Save_Click" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
