<Window x:Class="TelecomApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telecom App" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Просмотр">
                <MenuItem Header="Показать всех клиентов" Click="ShowCustomers_Click"/>
                <MenuItem Header="Показать все услуги" Click="ShowServices_Click"/>
                <MenuItem Header="Показать подписки" Click="ShowSubscriptions_Click"/>
                <MenuItem Header="Показать сотрудников" Click="ShowEmployees_Click"/>
            </MenuItem>
            <MenuItem Header="Добавить">
                <MenuItem Header="Добавить клиента" Click="AddCustomer_Click"/>
                <MenuItem Header="Добавить услугу" Click="AddService_Click"/>
                <MenuItem Header="Добавить подписку" Click="AddSubscription_Click"/>
                <MenuItem Header="Добавить сотрудника" Click="AddEmployee_Click"/>
            </MenuItem>
            <MenuItem Header="Справка" Click="ShowHelp_Click"/>
            <MenuItem Header="Файл">
                <MenuItem Header="Выход" Click="Exit_Click"/>
            </MenuItem>
        </Menu>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" />
    </DockPanel>
</Window>
