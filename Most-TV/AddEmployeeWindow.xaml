<Window x:Class="TelecomApp.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить сотрудника" Height="300" Width="350" ResizeMode="NoResize">
	<StackPanel Margin="10">
        <TextBlock Text="ФИО:"/>
        <TextBox x:Name="FullNameTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Должность:"/>
        <TextBox x:Name="PositionTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Email:"/>
        <TextBox x:Name="EmailTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Телефон:"/>
        <TextBox x:Name="PhoneTextBox" Margin="0,5,0,10"/>

        <Button Content="Сохранить" Click="Save_Click" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
