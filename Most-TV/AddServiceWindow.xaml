<Window x:Class="TelecomApp.AddServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить услугу" Height="250" Width="350">
    <StackPanel Margin="10">
        <TextBlock Text="Название услуги:"/>
        <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Описание:"/>
        <TextBox x:Name="DescriptionTextBox" Margin="0,5,0,10"/>

        <TextBlock Text="Ежемесячная плата:"/>
        <TextBox x:Name="FeeTextBox" Margin="0,5,0,10"/>

        <Button Content="Сохранить" Click="Save_Click" Width="100" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
